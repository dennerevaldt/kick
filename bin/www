#!/usr/bin/env node

var app = require('../app'),
	debug = require('debug')('api:server');

var PORT = process.env.PORT || 3000;
	
var server = app.listen(PORT, function(){
	var host = server.address().address;
	var port = server.address().port;
	debug('App rodando em http://%s:%s', host, port);
});